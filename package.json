{
  "name": "@ailint/mcp",
  "version": "0.2.0",
  "description": "AILint MCP Server - Intelligent code analysis for AI assistants",
  "keywords": [
    "modelcontextprotocol",
    "mcp",
    "ailint",
    "code-analysis",
    "code-quality",
    "ai-assistant"
  ],
  "author": "AILint Team",
  "license": "MIT",
  "type": "module",
  "module": "./src/index.ts",
  "bin": {
    "ailint-mcp": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && chmod 755 dist/index.js",
    "start": "node dist/index.js --transport stdio",
    "dev": "npx tsx src/index.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "format": "prettier --write .",
    "lint": "eslint \"**/*.{js,ts,tsx}\" --fix",
    "lint:check": "eslint \"**/*.{js,ts,tsx}\"",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0",
    "commander": "^14.0.0",
    "zod": "^3.24.2",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.14",
    "@types/js-yaml": "^4.0.9",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.5",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.28.0",
    "tsx": "^4.6.2"
  }
}